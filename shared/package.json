{
  "name": "shared",
  "version": "1.0.0",
  "description": "Shared code for microservices",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc && npm run build:clean-tests",
    "build:clean-tests": "if [ -d dist ]; then find dist -type d -name '__tests__' -exec rm -rf {} + 2>/dev/null || true; fi",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage --run",
    "test:coverage:open": "vitest --coverage --run && open coverage/index.html",
    "pretest:integration": "./scripts/check-services.sh",
    "test:integration": "vitest --run -t 'Integration Tests'",
    "test:integration:local": "vitest --run -t 'LocalFileContextManager Integration Tests'",
    "test:integration:mongo": "vitest --run -t 'MongoContextManager Integration Tests'",
    "test:integration:pinecone": "vitest --run -t 'PineconeContextManager Integration Tests'",
    "test:integration:factory": "vitest --run -t 'ContextManagerFactory Integration Tests'",
    "test:unit": "vitest --run --exclude **/*.integration.test.ts",
    "check:services": "./scripts/check-services.sh"
  },
  "dependencies": {
    "@pinecone-database/pinecone": "^6.1.3",
    "amqplib": "^0.10.3",
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "eventsource": "^2.0.2",
    "mongodb": "^6.3.0",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.4",
    "@types/eventsource": "^1.1.15",
    "@types/node": "^20.10.6",
    "@types/ws": "^8.5.10",
    "@vitest/coverage-v8": "^1.2.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  }
}
